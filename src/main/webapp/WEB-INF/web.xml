<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>Create</servlet-name>
		<servlet-class>com.ty.stock.controller.CreateItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Create</servlet-name>
		<url-pattern>/create</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Display</servlet-name>
		<servlet-class>com.ty.stock.controller.GetAllItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Display</servlet-name>
		<url-pattern>/display</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Delete</servlet-name>
		<servlet-class>com.ty.stock.controller.DeleteItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Delete</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetItem</servlet-name>
		<servlet-class>com.ty.stock.controller.GetItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetItem</servlet-name>
		<url-pattern>/getitem</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Edit</servlet-name>
		<servlet-class>com.ty.stock.controller.EditItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Edit</servlet-name>
		<url-pattern>/edit</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>Login</servlet-name>
	<servlet-class>com.ty.stock.controller.AdminLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Login</servlet-name>
	<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
	<servlet-name>Register</servlet-name>
	<servlet-class>com.ty.stock.controller.RegisterAdmin</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Register</servlet-name>
	<url-pattern>/registeruser</url-pattern>
	</servlet-mapping>
	
</web-app>
